{
    "template" : "gratia",
        "settings" : {
            "index.refresh_interval" : "5s"
        },
        "mappings" : {
            "_default_" : {
                "_all" : {"enabled" : true, "omit_norms" : true},
                "dynamic_templates" : [ {
                    "message_field" : {
                        "match" : "message",
                        "match_mapping_type" : "string",
                        "mapping" : {
                            "type" : "string", "index" : "analyzed", "omit_norms" : true,
                            "fields" : {
                                "raw" : {"type": "string", "index" : "not_analyzed", "ignore_above" : 256}
                            }
                        }
                    }
                }, {
                    "string_fields" : {
                        "match" : "*",
                        "match_mapping_type" : "string",
                        "mapping" : {
                            "type" : "string", "index" : "analyzed", "omit_norms" : true,
                            "fields" : {
                                "raw" : {"type": "string", "index" : "not_analyzed", "ignore_above" : 256}
                            }
                        }
                    }
                } ],
                    "properties" : {
                        "@version": { "type": "string", "index": "not_analyzed" },
                        "geoip"  : {
                            "type" : "object",
                            "dynamic": true,
                            "properties" : {
                                "location" : { "type" : "geo_point" }
                            }
                        }
                    }
            },
            "JobUsageRecord": {
                "properties": {
                    "Charge": {
                        "type": "float"
                    },
                    "CreateTime": {
                        "type": "date"
                    },
                    "StartTime": {
                        "type": "date"
                    },
                    "EndTime": {
                        "type": "date"
                    },
                    "CpuSystemDuration": {
                        "type": "float"
                    },
                    "CpuUserDuration": {
                        "type": "float"
                    },
                    "Memory": {
                        "type": "float"
                    },
                    "NodeCount": {
                        "type": "integer"
                    },
                    "Processors": {
                        "type": "integer"
                    },
                    "WallDuration": {
                        "type": "float"
                    },
                    "TimeDuration": {
                        "type": "float"
                    }
                },
                "dynamic_templates": [
                { "notanalyzed": {
                                     "match":              "*", 
                                     "match_mapping_type": "string",
                                     "mapping": {
                                         "type":        "string",
                                         "index":       "not_analyzed"
                                     }
                                 }
                }
                ]
            }
        }
}
